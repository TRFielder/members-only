extends layout

block content
  h1 Sign up 
  form(action="" method="POST")
    div.form-group
        label(for="username") Username 
        input(name="username" placeholder="Username" type="text" required=true value=(undefined===form_data ? "" : form_data.username))
    div.form-group
        label(for="fname") First name
        input(name="fname" placeholder="fname" type="text" required=true value=(undefined===form_data ? "" : form_data.fname))
    div.form-group
        label(for="fname") Last name
        input(name="lname" placeholder="lname" type="text" required=true value=(undefined===form_data ? "" : form_data.lname))
    div.form-group
        label(for="password") Password
        input(name="password" type="password" required=true)
    div.form-group
        label(for="password_confirm") Confirm Password
        input(name="password_confirm" type="password" required=true)
    div.form-group
        button(type="submit") Submit

  if errors
    ul
      for error in errors
        li!= error.msg
