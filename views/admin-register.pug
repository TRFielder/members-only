extends layout 

block content 
    h1 Register as admin 
    form(action="" method="POST")
        div.form-group
            label(for="passcode") Secret code
            input(name="passcode" placeholder="What could it be?" type="password" required=true)
        div.form-group 
            button(type="submit") Submit

    if errors
        ul 
            for error in errors 
                li!= error.msg

