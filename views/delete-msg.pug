extends layout 

block content 
    h4 Are you sure you want to delete this message?
    div.message-container 
        h4=message.author.username 
        p=message.text 
        small=message.date 
    form(method="POST" action="")
        div 
            input#id(type="hidden",name="id", required="true", value=message._id)

        button(type="submit") Delete